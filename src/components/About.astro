---
import { Code2, Globe, Rocket, Wrench, Users } from 'lucide-react';

const services = [
  {
    icon: Code2,
    title: "Sitios web personalizados",
    description: "Para empresas, comercios y organizaciones",
    color: "emerald"
  },
  {
    icon: Globe,
    title: "E-commerce completo",
    description: "Tiendas online y sistemas de venta",
    color: "azure-radiance"
  },
  {
    icon: Rocket,
    title: "Landing pages",
    description: "Alto impacto para campañas específicas",
    color: "purple"
  },
  {
    icon: Wrench,
    title: "Mantenimiento web",
    description: "Actualizaciones periódicas y soporte",
    color: "rose"
  },
  {
    icon: Users,
    title: "Planes accesibles",
    description: "Adaptados a tu presupuesto",
    color: "yellow"
  }
];
---

<section id="servicios-digitales" class="py-32 bg-gradient-to-b from-azure-radiance-950 to-black relative overflow-hidden">
  {/* Efecto de partículas o líneas en el fondo */}
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h2 class="text-4xl font-bold text-white mb-6">
        Soluciones Digitales para tu Negocio
      </h2>
      <p class="text-gray-300 text-lg font-geist">
        Creamos experiencias web únicas que destacan tu marca
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
      {/* Imagen con efectos */}
      <div class="relative group">
        <div class="absolute -inset-1 bg-gradient-to-r from-emerald-500 to-azure-radiance-500 rounded-full blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
        <div class="relative aspect-square rounded-full overflow-hidden border-2 border-white/10 shadow-2xl">
          <img 
            src="/pc.png" 
            alt="Equipo de Selva Digital" 
            class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
          />
        </div>
      </div>

      {/* Servicios con iconos */}
      <div class="space-y-8">
        {services.map((service) => (
          <div class="group relative">
            <div class={`flex items-start gap-4 p-4 rounded-xl bg-white/5 border border-white/10 hover:border-${service.color}-500/50 transition-all duration-300`}>
              <div class={`p-3 rounded-lg bg-${service.color}-500/10 group-hover:bg-${service.color}-500/20 transition-colors duration-300`}>
                <service.icon className={`w-6 h-6 text-${service.color}-400`} />
              </div>
              <div>
                <h3 class="text-white font-semibold mb-1 group-hover:text-azure-radiance-400 transition-colors duration-300">
                  {service.title}
                </h3>
                <p class="text-gray-400 text-sm">
                  {service.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: radial-gradient(circle at 1px 1px, rgba(255, 255, 255, 0.1) 1px, transparent 0);
    background-size: 40px 40px;
  }

  @media (prefers-reduced-motion: no-preference) {
    .bg-grid-pattern {
      animation: patternMove 20s linear infinite;
    }
  }

  @keyframes patternMove {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(-40px);
    }
  }
</style>