---
import { Card } from '../components/ui/card';
import { ExternalLink, Github } from 'lucide-react';

const projects = [
  { 
    title: 'El Fogón Delivery E-commerce',
    description: 'Sistema completo de delivery con gestión de pedidos en tiempo real',
    image: '/fogon.png',
    url: 'https://elfogoniguazu.com',
    tags: ['Next.js', 'Tailwind', 'Firebase'],
    github: '#'
  },
  { 
    title: 'Iguazú Falls Lodges',
    description: 'Plataforma de reservas para alojamientos turísticos',
    image: '/iguazuFalls.png',
    url: 'https://iguazu-falls.vercel.app/',
    tags: ['React', 'Node.js', 'MongoDB'],
    github: '#'
  },
  { 
    title: 'Aplicación de Fitness',
    description: 'App de seguimiento de rutinas y progreso personal',
    image: 'https://picsum.photos/800/600?random=3',
    url: 'https://fitness-app-one.vercel.app/',
    tags: ['React Native', 'Express', 'PostgreSQL'],
    github: '#'
  }
];
---

<section id="portfolio" class="py-12 sm:py-32 bg-black relative overflow-hidden">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>

  <div class="container mx-auto px-3 sm:px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center mb-8 sm:mb-16">
      <h2 class="text-2xl sm:text-4xl font-bold text-white mb-3 sm:mb-6">
        Nuestro Portfolio
      </h2>
      <p class="text-gray-300 text-sm sm:text-lg font-geist">
        Proyectos que demuestran nuestro compromiso con la excelencia
      </p>
    </div>

    <div class="md:hidden space-y-4">
      {projects.map((project) => (
        <Card className="relative bg-white/5 backdrop-blur-sm border border-white/10 overflow-hidden">
          <div class="relative h-48">
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-black/60 flex items-center justify-center">
              <a 
                href={project.url} 
                target="_blank" 
                class="flex items-center gap-2 bg-white/10 hover:bg-white/20 px-4 py-1.5 rounded-full backdrop-blur-sm"
              >
                <ExternalLink className="w-4 h-4 text-white" />
                <span class="text-xs text-white">Ver proyecto</span>
              </a>
            </div>
          </div>
          <div class="p-4">
            <h3 class="text-base font-bold text-white mb-1">
              {project.title}
            </h3>
            <p class="text-gray-400 text-xs mb-3">{project.description}</p>
            <div class="flex flex-wrap gap-1.5">
              {project.tags.map((tag) => (
                <span class="text-[10px] px-2 py-0.5 rounded-full bg-azure-radiance-500/10 text-azure-radiance-300 border border-azure-radiance-500/20">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </Card>
      ))}
    </div>

    <div class="hidden md:grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {projects.map((project) => (
        <div class="group relative">
          <Card className="relative bg-white/5 backdrop-blur-sm border border-white/10 overflow-hidden h-full transition-all duration-500">
            <div class="relative h-48 overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title} 
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center">
                <a 
                  href={project.url} 
                  target="_blank" 
                  class="flex items-center gap-2 bg-white/10 hover:bg-white/20 px-6 py-2 rounded-full backdrop-blur-sm transition-all duration-300"
                >
                  <ExternalLink className="w-4 h-4 text-white" />
                  <span class="text-sm text-white">Ver proyecto</span>
                </a>
              </div>
            </div>
            <div class="p-6 relative">
              <div class="absolute top-0 left-1/2 -translate-x-1/2 w-0 h-[1px] bg-azure-radiance-500 group-hover:w-[90%] transition-all duration-500"></div>
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-azure-radiance-400 transition-colors duration-300">
                {project.title}
              </h3>
              <p class="text-gray-400 text-sm mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map((tag) => (
                  <span class="text-xs px-3 py-1 rounded-full bg-azure-radiance-500/10 text-azure-radiance-300 border border-azure-radiance-500/20">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </Card>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: radial-gradient(circle at 1px 1px, rgba(255, 255, 255, 0.1) 1px, transparent 0);
    background-size: 40px 40px;
  }

  @media (prefers-reduced-motion: no-preference) {
    .bg-grid-pattern {
      animation: patternMove 20s linear infinite;
    }
  }

  @keyframes patternMove {
    from { transform: translateY(0); }
    to { transform: translateY(-40px); }
  }

  .overflow-x-auto {
    scrollbar-width: none;
    -ms-overflow-style: none;
    -webkit-overflow-scrolling: touch;
  }
  
  .overflow-x-auto::-webkit-scrollbar {
    display: none;
  }
</style>