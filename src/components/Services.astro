---
import { Zap, Users, Target, Shield, CheckCircle } from 'lucide-react';

const features = [
  {
    icon: Zap,
    title: "Más de 5 años de experiencia",
    description: "Desarrollo web profesional y confiable", 
    color: "emerald"
  },
  {
    icon: Users,
    title: "Equipo profesional",
    description: "Especialistas altamente calificados",
    color: "azure-radiance"
  },
  {
    icon: Target,
    title: "Enfoque personalizado", 
    description: "Soluciones adaptadas a tu negocio",
    color: "purple"
  },
  {
    icon: Shield,
    title: "Compromiso total",
    description: "Satisfacción del cliente garantizada",
    color: "rose"
  }
];
---

<section id="sobre-nosotros" class="py-24 bg-gradient-to-b from-azure-radiance-800 via-azure-radiance-900 to-azure-radiance-950">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h2 class="text-4xl font-bold text-white mb-6">
        Por qué elegir Selva Digital
      </h2>
      <p class="text-gray-300 text-lg">
        Transformamos tu visión en una presencia digital impactante
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
      {features.map((feature) => (
        <div class="group relative">
          <div class="absolute inset-0 bg-white/5 rounded-2xl transition-all duration-300 group-hover:bg-white/10"></div>
          <div class="relative overflow-hidden backdrop-blur-lg p-6 rounded-2xl border border-white/10">
            <div class="flex items-start gap-4">
              <div class={`relative p-3 rounded-xl bg-${feature.color}-500/10 border border-${feature.color}-500/20`}>
                <div class="absolute inset-0 blur-sm bg-${feature.color}-500/20 group-hover:bg-${feature.color}-500/30 transition-all duration-300"></div>
                <feature.icon className={`w-6 h-6 text-${feature.color}-400 relative z-10`} />
              </div>
              <div class="flex-1 relative">
                <div class="absolute -inset-1 rounded scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left bg-gradient-to-r from-white/5 via-white/10 to-transparent"></div>
                <h3 class="text-xl font-bold text-white mb-2 relative">{feature.title}</h3>
                <p class="text-gray-300 relative">{feature.description}</p>
              </div>
            </div>
            <div class="absolute bottom-0 left-0 right-0 h-[1px] bg-gradient-to-r from-transparent via-white/20 to-transparent transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
          </div>
        </div>
      ))}
    </div>

    <div class="relative group rounded-2xl overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/20 to-azure-radiance-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-2xl"></div>
      <div class="relative bg-white/5 backdrop-blur-lg p-8 rounded-2xl border border-white/10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="space-y-6 text-white">
            <h3 class="text-2xl font-bold">Tecnología de vanguardia</h3>
            <p class="text-gray-300">
              Utilizamos las últimas tecnologías y mejores prácticas para crear sitios web rápidos, seguros y escalables.
            </p>
            <ul class="space-y-4">
              <li class="flex items-center gap-3">
                <CheckCircle className="w-5 h-5 text-emerald-400" />
                <span>Desarrollo web moderno</span>
              </li>
              <li class="flex items-center gap-3">
                <CheckCircle className="w-5 h-5 text-emerald-400" />
                <span>Diseño responsive</span>
              </li>
              <li class="flex items-center gap-3">
                <CheckCircle className="w-5 h-5 text-emerald-400" />
                <span>Optimización SEO</span>
              </li>
            </ul>
          </div>
          <div class="relative aspect-video bg-gradient-to-br from-black/40 to-black/10 rounded-xl p-6">
            <div class="grid grid-cols-4 md:grid-cols-5 gap-6 h-full place-items-center">
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/react/react-original.svg" 
                alt="React" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/nextjs/nextjs-original.svg" 
                alt="Next.js" 
                class="w-10 h-10 hover:scale-110 transition-transform invert"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/astro/astro-original.svg" 
                alt="Astro" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/redux/redux-original.svg" 
                alt="Redux" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://www.vectorlogo.zone/logos/tailwindcss/tailwindcss-icon.svg" 
                alt="Tailwind" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />

              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/typescript/typescript-original.svg" 
                alt="TypeScript" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/nodejs/nodejs-original.svg" 
                alt="Node.js" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/express/express-original.svg" 
                alt="Express.js" 
                class="w-10 h-10 hover:scale-110 transition-transform invert"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/postgresql/postgresql-original.svg" 
                alt="PostgreSQL" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/mongodb/mongodb-original.svg" 
                alt="MongoDB" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />

              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/materialui/materialui-original.svg" 
                alt="Material UI" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/bootstrap/bootstrap-original.svg" 
                alt="Bootstrap" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/shadcn-ui/ui/main/apps/www/public/favicon.ico" 
                alt="Shadcn UI" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/sass/sass-original.svg" 
                alt="Sass" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/docker/docker-original.svg" 
                alt="Docker" 
                class="w-10 h-10 hover:scale-110 transition-transform"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    font-family: 'Geist Mono', monospace;
  }
</style>