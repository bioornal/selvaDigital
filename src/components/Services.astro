---
import { Zap, Users, Target, Shield, CheckCircle } from 'lucide-react';

const features = [
  {
    icon: Zap,
    title: "Más de 5 años de experiencia",
    description: "Desarrollo web profesional y confiable", 
    color: "emerald"
  },
  {
    icon: Users,
    title: "Equipo profesional",
    description: "Especialistas altamente calificados",
    color: "azure-radiance"
  },
  {
    icon: Target,
    title: "Enfoque personalizado", 
    description: "Soluciones adaptadas a tu negocio",
    color: "purple"
  },
  {
    icon: Shield,
    title: "Compromiso total",
    description: "Satisfacción del cliente garantizada",
    color: "rose"
  }
];
---

<section id="sobre-nosotros" class="py-8 sm:py-24 bg-gradient-to-b from-azure-radiance-800 via-azure-radiance-900 to-azure-radiance-950">
  <div class="container mx-auto px-3 sm:px-4">
    <div class="max-w-4xl mx-auto text-center mb-6 sm:mb-16">
      <h2 class="text-2xl sm:text-4xl font-bold text-white mb-3 sm:mb-6">
        Por qué elegir Selva Digital
      </h2>
      <p class="text-gray-300 text-sm sm:text-lg">
        Transformamos tu visión en una presencia digital impactante
      </p>
    </div>

    <div class="sm:hidden mb-8">
      <ul class="space-y-4">
        {features.map((feature) => (
          <li class="flex items-center gap-3 text-white p-3 rounded-lg bg-white/5">
            <div class={`p-2 rounded-lg bg-${feature.color}-500/10 border border-${feature.color}-500/20`}>
              <feature.icon className={`w-4 h-4 text-${feature.color}-400`} />
            </div>
            <div>
              <h3 class="text-sm font-bold">{feature.title}</h3>
              <p class="text-xs text-gray-300">{feature.description}</p>
            </div>
          </li>
        ))}
      </ul>
    </div>

    <div class="hidden sm:grid md:grid-cols-2 gap-8 mb-16">
      {features.map((feature) => (
        <div class="group relative">
          <div class="absolute inset-0 bg-white/5 rounded-xl sm:rounded-2xl transition-all duration-300 group-hover:bg-white/10"></div>
          <div class="relative overflow-hidden backdrop-blur-lg p-4 sm:p-6 rounded-xl sm:rounded-2xl border border-white/10">
            <div class="flex items-start gap-3 sm:gap-4">
              <div class={`relative p-2 sm:p-3 rounded-lg sm:rounded-xl bg-${feature.color}-500/10 border border-${feature.color}-500/20`}>
                <feature.icon className={`w-5 h-5 sm:w-6 sm:h-6 text-${feature.color}-400 relative z-10`} />
              </div>
              <div class="flex-1 relative">
                <h3 class="text-lg sm:text-xl font-bold text-white mb-1 sm:mb-2 relative">{feature.title}</h3>
                <p class="text-sm sm:text-base text-gray-300 relative">{feature.description}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="relative group rounded-xl sm:rounded-2xl overflow-hidden">
      <div class="relative bg-white/5 backdrop-blur-lg p-4 sm:p-8 rounded-xl sm:rounded-2xl border border-white/10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-12 items-center">
          <div class="space-y-4 sm:space-y-6 text-white">
            <h3 class="text-xl sm:text-2xl font-bold">Tecnología de vanguardia</h3>
            <p class="text-sm sm:text-base text-gray-300">
              Utilizamos las últimas tecnologías y mejores prácticas para crear sitios web rápidos, seguros y escalables.
            </p>
            <ul class="space-y-3 sm:space-y-4">
              <li class="flex items-center gap-3">
                <CheckCircle className="w-5 h-5 text-emerald-400" />
                <span>Desarrollo web moderno</span>
              </li>
              <li class="flex items-center gap-3">
                <CheckCircle className="w-5 h-5 text-emerald-400" />
                <span>Diseño responsive</span>
              </li>
              <li class="flex items-center gap-3">
                <CheckCircle className="w-5 h-5 text-emerald-400" />
                <span>Optimización SEO</span>
              </li>
            </ul>
          </div>
          <div class="relative bg-gradient-to-br from-black/40 to-black/10 rounded-lg sm:rounded-xl p-4 sm:p-6">
            <div class="grid grid-cols-3 xs:grid-cols-4 md:grid-cols-5 gap-4 sm:gap-6 place-items-center">
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/react/react-original.svg" 
                alt="React" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/nextjs/nextjs-original.svg" 
                alt="Next.js" 
                class="tech-icon invert"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/astro/astro-original.svg" 
                alt="Astro" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/redux/redux-original.svg" 
                alt="Redux" 
                class="tech-icon"
              />
              <img 
                src="https://www.vectorlogo.zone/logos/tailwindcss/tailwindcss-icon.svg" 
                alt="Tailwind" 
                class="tech-icon"
              />

              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/typescript/typescript-original.svg" 
                alt="TypeScript" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/nodejs/nodejs-original.svg" 
                alt="Node.js" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/express/express-original.svg" 
                alt="Express.js" 
                class="tech-icon invert"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/postgresql/postgresql-original.svg" 
                alt="PostgreSQL" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/mongodb/mongodb-original.svg" 
                alt="MongoDB" 
                class="tech-icon"
              />

              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/materialui/materialui-original.svg" 
                alt="Material UI" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/bootstrap/bootstrap-original.svg" 
                alt="Bootstrap" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/shadcn-ui/ui/main/apps/www/public/favicon.ico" 
                alt="Shadcn UI" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/sass/sass-original.svg" 
                alt="Sass" 
                class="tech-icon"
              />
              <img 
                src="https://raw.githubusercontent.com/devicons/devicon/master/icons/docker/docker-original.svg" 
                alt="Docker" 
                class="tech-icon"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    font-family: 'Geist Mono', monospace;
  }
  
  .tech-icon {
    @apply w-8 h-8 sm:w-10 sm:h-10 hover:scale-110 transition-transform;
    filter: drop-shadow(0 0 0.5rem rgba(255, 255, 255, 0.1));
  }
</style>