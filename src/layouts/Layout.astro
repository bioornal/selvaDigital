---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton';
import Banner from '../components/Banner';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <meta name="description" content="Selva Digital: Expertos en diseño web, desarrollo y mantenimiento. Transformamos ideas en experiencias digitales impactantes.">
    <meta name="keywords" content="diseño web, desarrollo web, mantenimiento web, SEO, experiencia digital">
    <meta name="author" content="Selva Digital">
    <meta property="og:title" content="Selva Digital - Desarrollo Web Profesional">
    <meta property="og:description" content="Expertos en diseño web, desarrollo y mantenimiento. Transformamos ideas en experiencias digitales impactantes.">
    <meta property="og:image" content="/images/og-image.jpg">
    <meta property="og:url" content="https://www.selvadigital.com">
    <meta name="twitter:card" content="summary_large_image">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100&display=swap" rel="stylesheet">
  </head>
  <body class="bg-site-background text-azure-radiance-950">
    <Header client:load />
    <main>
      <slot />
    </main>
    <Footer />
    <WhatsAppButton client:load />
    <Banner client:load />
  </body>
</html>
